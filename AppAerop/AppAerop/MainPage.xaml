<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAerop.MainPage">

    <StackLayout Background="white">
        <Label FontFamily="Canela" TextColor="#05A6A6" FontSize="70" HorizontalOptions="Center" Margin="0,100,0,0">Sky Island Aerolinea</Label>
        <Image Source="as.jpg" WidthRequest="250"></Image>
        <Button  Clicked="Button_Clicked" BorderColor="White" FontSize="18" TextColor="White" BorderWidth="3" CornerRadius="20" HorizontalOptions="Center" 
                 Margin="0,20,0,20" WidthRequest="300" Text="Agregar Vuelo" Background="#18778C"></Button>
        <Button  Clicked="Button_Clicked_1" BorderColor="White" FontSize="18" TextColor="White" BorderWidth="3" CornerRadius="20" HorizontalOptions="Center" 
                 Margin="0,20,0,20" WidthRequest="300" Text="Eliminar Vuelo" Background="#18778C"></Button>
    </StackLayout>

</ContentPage>
